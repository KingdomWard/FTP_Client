<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.delete.delete.deleteController"
      prefHeight="300.0"
      prefWidth="400.0" spacing="10">

    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
        </padding>
        <Button text="Add Files" onAction="#addFiles"/>
        <Button text="Delete Selected" onAction="#deleteSelectedFiles"/>
    </HBox>

    <ListView fx:id="fileListView" prefHeight="200.0" prefWidth="400.0"/>

</VBox>
